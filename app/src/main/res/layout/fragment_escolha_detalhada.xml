<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EscolhaDetalhada"
    android:background="@color/salmao">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />

    <ImageView
        android:id="@+id/backgroundGradient"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:clipToOutline="true"
        android:scaleType="fitXY"
        android:src="@drawable/background_detalhe_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detalhe_placa_carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="PLACA"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/detalhe_imagem_carro"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/placeholder_carro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/ScrollInformacoes"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toBottomOf="@+id/backgroundGradient">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="10dp"
                >
                <TextView
                    android:id="@+id/detalhe_modelo_carro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ford Ka"
                    android:textSize="24dp"
                    android:paddingHorizontal="15dp"/>
                <TextView
                    android:id="@+id/detalhe_preco_carro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R$ 12.000,00"
                    android:textAlignment="center"
                    android:paddingVertical="24sp"
                    android:textSize="24dp"/>
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="10dp">
                <TextView
                    android:id="@+id/detalhe_porta_carro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Portas: 4 portas"
                    android:textSize="16dp"
                    android:padding="10dp"/>
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="10dp">
                <TextView
                    android:id="@+id/detalhe_grupo_carro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grupo: Sedan"
                    android:textSize="16dp"
                    android:padding="10dp"/>
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="10dp">
                <TextView
                    android:id="@+id/detalhe_cambio_carro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Câmbio: Automatico"
                    android:textSize="16dp"
                    android:padding="10dp"/>
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="10dp">
            <TextView
                android:id="@+id/detalhe_ano_carro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ano: 2023"
                android:textSize="16dp"
                android:padding="10dp"/>
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="10dp">
            <TextView
                android:id="@+id/detalhe_combustivel_carro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Combustivel: Flex"
                android:textSize="16dp"
                android:padding="10dp"/>
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="10dp">
                <TextView
                    android:id="@+id/detalhe_cor_carro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cor: Preto"
                    android:textSize="16dp"
                    android:padding="10dp"/>
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="10dp">
            <TextView
                android:id="@+id/detalhe_marca_carro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fabricante: Ford"
                android:textSize="16dp"
                android:padding="10dp"/>
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="10dp">
            <TextView
                android:id="@+id/detalhe_descricao_carro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Descrição: carrão top"
                android:textSize="16dp"
                android:padding="10dp"/>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_detalhe_continuar"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Continuar"
                android:backgroundTint="@color/purple"
                app:cornerRadius="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ScrollInformacoes"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_detalhe_sair"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Sair"
                android:textColor="@color/purple"
                android:backgroundTint="@color/salmao"
                app:cornerRadius="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_detalhe_continuar"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>


        </LinearLayout>



    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>